{% extends 'base.html.twig' %}

{% block title %}Validation de la commande{% endblock %}

{% block body %}

    <div class="container my-5 text-center">
        <h1 class="mb-4" style="color: #9e121b;">Validation de la commande</h1>
        <div class="row justify-content-center">
            <div class="col-md-6"> 
                <div class="card shadow"> 
                    <div class="card-body"> 
                        <h2 class="card-title" style="color: #9e121b;">Commande réussie!</h2>
                        <p>Votre commande a été enregistrée avec succès.</p>
                        <p>Numéro de commande: <strong>{{ order_reference }}</strong></p>
                        <p>Date de commande: {{ order_created_at|date('d/m/Y') }}</p>
                        <p>Prix total de commande: <strong>{{ order_total }} €</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>    
{% endblock %}



