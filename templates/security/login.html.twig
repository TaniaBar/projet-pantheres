{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<section class="container my-3 position-relative">
    <div class="row justify-content-center position-relative">
        <div class="col-md-8 style="z-index: 1;"">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté(e) comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-4 font-weight-bold" style="color: #9e121b;">
                    <img src="{{ asset('img/grape.png') }}" style="width:1.6em;"> ME CONNECTER 
                </h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword" class="mt-3">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="d-flex justify-content-between align-items-center mt-3 ">
                    <button class="btn btn-outline" style="color: #9e121b; border-color: #9e121b;" type="submit">Me connecter</button>
                    <a href="{{ path('app_register') }}" style="color: #9e121b;">M'inscrire</a>
                </div>
                <div class="text-end mb-3">
                    <a href="{{ path('reset_password_app_forgot_password_request') }}" style="color: #9e121b;">Mot de passe oublié?</a>
                </div>
            </form>
            
           
            <div class="col-md-12 position-absolute d-none d-md-block" style="top: 10%; left: 80%; transform: translate(-0%, -60%); z-index: 0;">
                <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg" style="opacity: 0.9; ; width: 180px; height: 180px;">
                    <path fill="#9E121B" d="M29.7,-31.6C42.3,-31.8,58.8,-28.1,61,-20.1C63.2,-12.1,51.1,0.3,46.3,15C41.4,29.7,43.9,46.7,37.4,58C30.9,69.2,15.4,74.7,5,67.8C-5.5,61,-10.9,41.8,-13.3,29.2C-15.7,16.6,-15,10.6,-24,3C-33,-4.5,-51.7,-13.7,-50.9,-16.7C-50.1,-19.6,-29.8,-16.3,-18.1,-16.4C-6.3,-16.5,-3.2,-20,2.7,-23.7C8.6,-27.5,17.2,-31.5,29.7,-31.6Z" transform="translate(100 100)" />
                </svg>
            </div>

            <div class="container">
                <div class="row justify-content-center">
                    <div class="col">
                        <img src="{{ asset('img/bouteilles-et-verres.jpg') }}" class="img-fluid d-block mx-auto" style="opacity: 0.5;" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{% endblock %}
