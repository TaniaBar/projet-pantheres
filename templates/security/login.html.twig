{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<section class="container my-3">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté(e) comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
                    </div>
                {% endif %}

                <h1 class="h3 mb-4 font-weight-bold" style="color: #9e121b;">
                    <img src="img/grape.png" style="width:1.6em;"> ME CONNECTER 
                </h1>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword" class="mt-3">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                <div class="d-flex justify-content-between align-items-center mt-3 ">
                    <button class="btn btn-outline" style="color: #9e121b; border-color: #9e121b;" type="submit">Me connecter</button>
                    <a href="{{ path('app_register') }}" style="color: #9e121b;">M'inscrire</a>
                </div>
                <div class="text-end mb-3">
                    <a href="{{ path('reset_password_app_forgot_password_request') }}" style="color: #9e121b;">Mot de passe oublié?</a>
                </div>
            </form>
            
           <div class="container">
                <div class="row justify-content-center">
                    <div class="col">
                        <img src="img/bouteilles-et-verres.jpg" class="img-fluid d-block mx-auto" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


{% endblock %}
