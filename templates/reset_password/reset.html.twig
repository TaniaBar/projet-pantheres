{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <section class="container my-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center" style="color: #9e121b;">Réinitialisation du mot de passe</h1>
                {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}
                    <div class="text-center">
                        <button class="btn btn-outline" style="color: #9e121b; border-color: #9e121b;">Réinitialiser le mot de passe</button>
                    </div>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </section>
{% endblock %}


