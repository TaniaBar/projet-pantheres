{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    

    <section class="container my-3">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1>
                    <img src=" {{ asset('img/grape.png') }}" style="width:1.6em;"> INSCRIPTION
                </h1>
                <form method="post" style="margin-top:20px;">
                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}
                        {{ form_row(registrationForm.firstname, { label: 'Pr√©nom'}) }}
                        {{ form_row(registrationForm.lastname, { label: 'Nom'}) }}
                        {{ form_row(registrationForm.email, { label: 'E-mail'}) }}
                        {{ form_row(registrationForm.plainPassword, {
                            label: 'Mot de passe'
                        }) }}
                        <div class="form-group mt-3 mb-3">
                            <label for="{{ registrationForm.roles.vars.id }}">Role</label>
                            {% for choice in registrationForm.roles %}
                                <div class="form-check">
                                    {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                                    <label class="form-check-label" for="{{ choice.vars.id }}">{{ choice.vars.label }}</label>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="form-group form-check-inline">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">Agree terms</label>
                        </div>
                        <br>
                        <button class="btn btn-outline mt-4 mb-4" style="color: #9e121b; border-color: #9e121b;" type="submit">
                            M'inscrire
                        </button>
                        <div class="text-end mb-3">
                            <a href="{{ path('app_login') }}" style="color: #9e121b;" class="text-end">Retour au login</a>
                        </div>
                        
                    {{ form_end(registrationForm) }}
                </form>

                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col">
                            <img src="{{ asset('img/bouteilles-et-verres.jpg') }}" class="img-fluid d-block mx-auto" style="opacity: 0.5;" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
