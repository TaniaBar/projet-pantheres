{% extends 'base.html.twig' %}

{% block title %}We all are wine - Accueil{% endblock %}

{% block body %}

{# {{ dump(wines) }} #}
    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="{{ asset('img/vigna2.jpeg') }}" class="d-block w-100 " alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/vigna1.jpeg') }}" class="d-block w-100 " alt="...">
            </div>
            <div class="carousel-item">
                <img src="{{ asset('img/vigna3.jpeg') }}" class="d-block w-100 " alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <br>
    <div class="container">
        <p class="text-center" style="font-size: 1.5em">Nos offres</p>
        <p style="font-weight:bold; color: #9e121b; font-size: 1.8em" class="text-center">du moment</p>   
    </div> 

        {# cards offres du moment #}
    <div class="container my-4">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            {% for wine in wines %}
                <div class="col"> 
                    <div class="card cardAccueil">
                        <div class="card-title text-center">
                            <a href="{{ path('app_wines_details', { 'id': wine.id }) }}" style="font-weight: bold; color: #000; text-decoration: none;">{{ wine.name }}</a>
                        </div>
                        <a href="{{ path('app_wines_details', { 'id': wine.id }) }}">
                            <div style="display: flex; justify-content: center; align-items: center;">
                                {% if wine.getImages() is not empty %}
                                    {% for image in wine.getImages() %}
                                        <img src="/img/{{ image.getName() }}" class="card-img-top img-fluid" alt="{{ wine.name }}" style="object-fit: contain; width: 100%; height: 100%; margin-top:10px;">
                                    {% endfor %}
                                {% else %}
                                    <img src="/img/placeholder.png" class="card-img-top img-fluid" alt="Nessuna immagine disponibile" style="object-fit: contain; width: 100%; height: 100%; margin-top:10px;">
                                {% endif %}
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    
    <div class="text-end me-5 mt-4">
        <a href="{{ path('app_wines_index') }}" style="color: #9e121b; text-decoration: underline; ">Découvrez tous les vins →</a>
    </div>
    
    {# achat simple #}
    <div class="container">
        <div class="row align-items-center">
            
            <div class="col-12 text-center mb-3 mt-5">
                <p style="font-size: 1.4em">L'achat de vin sur internet n'a jamais été aussi simple!</p>
            </div>
            <br>
            <!-- ecrans larges and mediums -->
            <div class="col-lg-4 col-md-6 mb-3">
                <!-- font awesome -->
                <div class="text-center mt-2">
                    <i class="fa-solid fa-truck-fast center" style="font-size: 1.5em"></i>
                </div>
                <!-- text -->
                <div class="text-center mt-2">
                    <p style="color:#9e121b; font-weight:bold; font-size: 1.6em">Livraison en 24h</p>
                    <p style="font-size: 1.4em">le lendemain avant 15h</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-3">
                <!-- font awesome -->
                <div class="text-center mt-2">
                    <i class="fa-solid fa-box" style="font-size: 1.5em"></i>
                </div>
                <!-- text -->
                <div class="text-center mt-2">
                    <p style="color:#9e121b; font-weight:bold; font-size: 1.6em">Emballages</p>
                    <p style="font-size: 1.4em"> anti-casse</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-3">
                <!-- font awesome -->
                <div class="text-center mt-2">
                    <i class="fa-regular fa-credit-card" style="font-size: 1.5em"></i>
                </div>
                <!-- text -->
                <div class="text-center mt-2">
                    <p style="color:#9e121b; font-weight:bold; font-size: 1.6em">Paiement sécurisé</p>
                    <p style="font-size: 1.4em">Visa, Mastercard</p>
                </div>
            </div>
        </div>
    </div>
    
{% endblock %}

