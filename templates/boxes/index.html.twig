{% extends 'base.html.twig' %}

{% block title %}Boxes{% endblock %}

{% block body %}

    <section class="container my-3">
        <h1 class="text-center inboxes-h1">
        {# <img src="/img/grape.png" style="width:1.6em;"> #}
        NOS COFFRETS</h1>

        <div class="container my-4">
            <div class="row align-items-center">
                <!-- Colonna della foto -->
                <div class="col-12 col-md-6 text-center"> <!-- Centrato per gli schermi piccoli -->
                    <img src="/img/cincin-box.jpg" alt="" class="img-fluid rounded" style="max-width: 100%;">
                </div>

                <!-- Colonna del testo -->
                <div class="col-12 col-md-6"> <!-- Si adatta per schermi piccoli -->
                    <h2 style="color: #9e121b;">Coffrets et packs de vin !</h2>
                    <br>
                    <p style=" line-height:1.8; font-size: 1.1em">
                       Dégustez en grand, trinquez plus longtemps avec notre gamme de coffrets et packs de 2 à 6 bouteilles !
                    </p>
                    
                </div>
            </div>
        </div>

    </section>
    
    <section class="container my-3">
        <div class="row">
            {% for box in boxes %}
                
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card inboxs" >
                        <div style="width: 100%; height: 200px; overflow: hidden;">
                            {% for image in box.getImages() %}
                                <img src="/img/{{ image.getName() }}" class="card-img-top img-fluid" alt="{{ box.name }}" style="object-fit: contain; width: 100%; height: 100%; margin-top:10px;">
                            {% endfor %}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-center">{{box.name}}</h5>
                            <p class="card-text text-center" style="
                                display: -webkit-box;
                                -webkit-line-clamp: 3;
                                -webkit-box-orient: vertical;
                                overflow: hidden;
                                "> {{box.description}}
                            </p>
                            <p class="card-text">{{box.price}} €</p>
                            <a href="{{ path('app_boxes_details' , { 'id': box.id }) }}" class="btn btn-outline mt-4 mb-4 btnInboxes" >Détails</a>
                        </div>
                    </div>
                </div>
                
            {% endfor %}
        </div>
    </section>
        

{% endblock %}

